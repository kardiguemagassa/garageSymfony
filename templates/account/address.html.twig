{% extends 'base.html.twig' %}

{% block title %}Mes addresses - {% endblock %}

{% block content %}
    
    <h1 class="heading "><span>GÃ©rer addresse</span> de livraison </h1>

    <a href="{{path('account')}}" class="btn btn-block" >Retour</a> 
    <a href="{{path('account_address_add')}}" class="btn ">Ajouter une addresse</a>
    
    <hr>

    {% if app.user.addresses|length ==0 %}
        <p class="text-cnter">
