                            <h4 class="card-text">
                                {{address.address}}
                                {{address.postal}} - {{address.city}} - {{address.country}}
                            </h4>
                            <a href="{{path('account_address_edit',{'id': address.id})}}" class="btn">Modifier</a>
                            <a href="{{path('account_address_delete', {'id': address.id})}}" class="btn">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
     <hr>
{% endblock %}
